.tab-bar {
  position: fixed;
  right: 0;
  bottom: 0;
  left: 0;

  display: flex;

  height: 166px;
  padding-bottom: env(safe-area-inset-bottom);

  background: white;
  box-shadow: 0 -2.5px 2.5px rgba(0, 0, 0, .15);
}

.tab-bar-border {
  position: absolute;
  top: 0;
  left: 0;

  width: 100%;
  height: 2px;

  transform: scaleY(.5);

  background-color: rgba(0, 0, 0, .15);
}

.tab-bar-item {
  display: flex;
  align-items: center;
  flex: 1;
  flex-direction: column;
  justify-content: center;

  text-align: center;
}

.tab-bar-item image {
  width: 81px;
  height: 81px;
}

.tab-bar-item view {
  font-size: 20px;
}

.center {
  flex: 0 0 120px;

  box-sizing: border-box;
  width: 120px;
  height: 120px;
  padding: 20px;

  transform: translateY(-20%);

  border-radius: 50%;
  background: #fff;
  box-shadow: 0 -5px 5px rgba(0, 0, 0, .33);
}

.center image {
  z-index: 999;

  width: 80px;
  height: 80px;
}
